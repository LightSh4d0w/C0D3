        time.sleep(2)
        print("Kamu tidak bisa membedakan MANA BAGIAN ATAS DAN BAWAH dari buku ini")
        time.sleep(2)

    unlocked = False
    while not unlocked:
        print_kamartidur()
        Pilihan = input("\nApa yang ingin Anda periksa?...\n")

        if Pilihan == "1":
            unlocked = interaksi_pintu()
        elif Pilihan == "2":
            interaksi_foto()
        elif Pilihan == "3":
            interaksi_lemari1()
        elif Pilihan == "4":
            interaksi_bukuharian()
        else:
            print("\nPilihan tidak valid. Silakan pilih angka yang tertera.")
    
