        time.sleep(2)
        print("\nKamu penasaran berarti apa susunan buku itu.")
        time.sleep(3)
    
    def interakasi_peti():
        print("""                                    
           ____________________________    
          /──────────┬──────┬──────────\   
         //──────────│┌────┐│──────────\\  
        /────────────┘│┌──┐│└────────────\ 
