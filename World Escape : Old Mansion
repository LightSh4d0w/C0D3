    unlocked = False
    while not unlocked:
        print_kamartidur()
        Pilihan = input("Apa yang ingin Anda periksa? (1: Pintu, 2: Foto, 3: Lemari, 4: Buku):\n")

        if Pilihan == "1":
            unlocked = interaksi_pintu()
