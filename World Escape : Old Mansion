def Main_menu():
    Pilihan_Main_menu = None
    while Pilihan_Main_menu != 'Play' and Pilihan_Main_menu != 'Exit':
        print ("""                                                                                                                                               
    ┌───────────────────────────────────────────────────────────────────────┐      
    │                                                                       │      
