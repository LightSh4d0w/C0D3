    def interaksi_jamdinding():
        print("""                       
                _____         
             _.'_____`._      
           .'.-'  12 `-.`.    
          /,' 11      1 `.\   
         // 10      /   2 \\  
        ;;         /       :: 
        || 9      O      3 || 
        ::       /         ;; 
         \\ 8   <       4 //  
          \`.  7      5 ,'/   
           '.`-.__6__.-'.'    
            ((-._____.-))     """)
        print("\nKamu keheranan melihat ada jam dinding di basement")
        time.sleep(2)
        print("\nSepertinya jam itu sudah rusak.")
        time.sleep(3)
    
    def interaksi_lilin():
        print("""            
        . *  .  .  
         *  &&  .* 
        &&  ││  && 
        ││ │  │ ││ 
        \_=    =_/ 
           │  │    
           \  /    
         ___││___  
        /________\ """)
        print("\nRuangan ini akan gelap jika bukan karena susunan 3 lilin itu")
        time.sleep(3)
    
    def interaksi_secarikkertas():
        print("""                                                                         
        ┌────...          .──────────────────────────────────...       ..─────┐ 
        │      ...      ...                                    ....  ...      │ 
        │        .......                                          ...         │ 
        │                                                                     │ 
        │   Layaknya BUKU tua menjadi saksi bisu waktu.                       │ 
        │                                                                     │ 
        │   Diam tak dihiraukan, Halaman demi halaman terlewati.              │ 
        │                                                                     │ 
        │   Setiap JAM dengan kisah hampa yang harus dituju.                  │ 
        │                                                                     │ 
        │   Cahaya redup dari LILIN menerangi ruangan, menerangi kegelapan.   │ 
        │                                                                     │ 
        │                                                                     │ 
        │           .....                                            ...      │ 
        │         ...   ....                                          . ..    │ 
        └──────...         ..─────────────────────────────────────────.  ..───┘ 
                                                                         """)
        time.sleep(2)
        print("Kamu penasaran apa maksud dari huruf besarnya.")
        time.sleep(3)

    #Alur Permainan di Ruangan 3
    unlocked3 = False #Nilai awal variabel unlocked3
    while not unlocked3: #Loop akan berjalan sampai variabel unlocked3 bernilai True
        print_basement()
        Pilihan = input("\nApa yang ingin Kamu periksa?...\n")
        if Pilihan == '1':
            time.sleep(2)
            unlocked3=interaksi_pintukeluar() #Untuk merubah nilai variabel unlocked3 adalah dengan fungsi ini
        elif Pilihan == '2':
            time.sleep(2)
            interaksi_berangkas()
        elif Pilihan == '3':
            time.sleep(2)
            interaksi_lemari2()
        elif Pilihan == '4':
            time.sleep(2)
            interaksi_tempatsampah()
        elif Pilihan == '5':
            time.sleep(2)
            interaksi_sobekanfoto()
        elif Pilihan == '6':
            time.sleep(2)
            interaksi_kopertua()
        elif Pilihan == '7':
            time.sleep(2)
            interaksi_bukuberdebu()
        elif Pilihan == '8':
            time.sleep(2)
            interaksi_jamdinding()
        elif Pilihan == '9':
            time.sleep(2)
            interaksi_lilin()
        elif Pilihan == '10':
            time.sleep(2)
            interaksi_secarikkertas()
        else:
            print("\nPilihan tidak valid. Silakan pilih angka yang tertera.")
            time.sleep(2)
    
def introgame(): #Intro dari game nya
    time.sleep(2)
    print ("\n\n\nKamu merasakan rasa sakit yang menjalar di seluruh tubuhmu.\n\nMatamu terbuka perlahan-lahan hanya untuk menyadari.\n")
    time.sleep(3)
    print ("Kamu berada di sebuah ruangan tua. Sebuah Kamar tidur tua\n")
    time.sleep(2)
    print ("Sembari mencerna apa yang terjadi, kamu merasa harus pergi dari ruangan ini secepatnya\n")
    time.sleep(3)

