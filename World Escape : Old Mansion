import time
import sys

def gameplay():
    #RUANGAN 1 : KAMAR TIDUR
    def print_kamartidur():
        print("""                               
        ┌────────────────────────────────┐ 
        │=============================== │ 
        │                                │ 
        │                                │ 
        │                                │ 
        │    ┌───┐             ┬───┬───┬ │ 
        │    │ O │    ======   │┌─┐│┌─┐│ │ 
        │    │###│    │┌──┐│   ││*│││*││ │ 
        │[│  └───┘    │└──┘#   ││*│││*││ │ 
        │[│◄_______   │┌──┐#   ││*│││*││ │ 
        │[│││││││││]  │└──┘│   │└─┘│└─┘│ │ 
        ================================== 
                                     """)
        print("""
        ================================
                  KAMAR TIDUR
        ================================
        Interaksi:
        1. Pintu
        2. Foto Potrait
        3. Lemari
        4. Buku harian
        """)

    def interaksi_pintu():
        print("""\n\n               
        ┌───────────┐ 
        │┌─────────┐│ 
        ││         ││ 
        ││         ││ 
        ││         ││ 
        │└─────────┘│ 
        │        #@#│ 
        │┌─────────┐│ 
        ││         ││ 
        ││         ││ 
        │└─────────┘│ 
        └───────────┘ """)
        print("\nKamu berdiri di depan pintu keluar. Terlihat gembok kode yang sudah usang.")
        time.sleep(1)
        password = input("Ketik password: ")
        if password == "0606":
            print("\nMemasukan Password")
            time.sleep(2)
            print("\nKunci terbuka dengan bunyi klik pelan. Kamu berhasil keluar dari kamar tidur!")
            time.sleep(2)
            return True
        else:
            print("\n\nMemasukan Kode")
            time.sleep(2)
            print("\nGembok tidak bereaksi. Pintu tetap terkunci.")
            time.sleep(2)
            return False

    def interaksi_foto():
        print("\n\n\nKamu memandangi foto potret seseorang yang sudah lusuh.")
        time.sleep(2)
        print("Potret ini memancing kenangan samar yang tak ingin diingat. Tidak ada yang membantu di sini.")
        time.sleep(2)

    def interaksi_lemari():
        print("""\n\n                    
        ┌───────────────┐ 
        │┌─────┐│┌─────┐│ 
        ││┌──┐ │││ ┌──┐││ 
        │││  │ │││ │  │││ 
        │││  │ │││ │  │││ 
        │││  │<│││>│  │││ 
        │││  │ │││ │  │││ 
        │││  │ │││ │  │││ 
        ││└──┘ │││ └──┘││ 
        │└─────┘│└─────┘│ 
        └───────────────┘""")
        print("\nKamu mencoba membuka lemari kayu besar.")
        time.sleep(2)
        print("Engsel lemari terlalu kuat, sepertinya tidak mungkin dibuka dengan tangan kosong.")
        time.sleep(2)

    def interaksi_bukuharian():
        print("""\n\n                                                     
      __________________   _________________         
  .-/|                  \ /                  |\-.    
  ||||  ****             |             ****  ||||    
  |||| *    *            |            *    * ||||    
  |||| *    *            |  ****      *    * ||||    
  ||||  *****            | *    *     *    * ||||    
  ||||      *    ****    | *    *      ****  ||||    
  |||| *    *   *    *   |  *****            ||||    
  ||||  ****    *    *   |      *            ||||    
  ||||          *    *   | *    *            ||||    
  ||||           ****    |  ****             ||||    
  ||||                   |                   ||||    
  ||||__________________ | __________________||||    
  ||/===================\|/===================\||    
  `--------------------~___~-------------------''    
                                                     """)
        
        print("\nKamu membuka buku harian yang tergeletak di atas meja.")
        time.sleep(2)
        print("\nKamu membuka beberapa halaman, beberapa diantaranya hanya berisi sobekan kertas.")
        time.sleep(2)
        print("\"Kamu menemukan halaman bertuliskan 9090.\"\"")
        time.sleep(2)
        print("Aku tidak bisa membedakan MANA BAGIAN ATAS DAN BAWAH dari buku ini")
        time.sleep(2)

    unlocked = False
    while not unlocked:
        print_kamartidur()
        Pilihan = input("Apa yang ingin Anda periksa? (1: Pintu, 2: Foto, 3: Lemari, 4: Buku): ")

        if Pilihan == "1":
            unlocked = interaksi_pintu()
        elif Pilihan == "2":
            interaksi_foto()
        elif Pilihan == "3":
            interaksi_lemari()
        elif Pilihan == "4":
            interaksi_bukuharian()
        else:
            print("\nPilihan tidak valid. Silakan pilih 1, 2, 3, atau 4.")
    





    


def introgame():
    time.sleep(2)
    print ("\n\n\nKamu merasakan rasa sakit yang menjalar di seluruh tubuhmu.\n\nMatamu terbuka perlahan-lahan hanya untuk menyadari.\n")
    time.sleep(3)
    print ("Kamu berada di sebuah ruangan tua. Sebuah Kamar tidur tua\n")
    time.sleep(3)
    print ("Sembari mencerna apa yang terjadi, kamu merasa harus pergi dari ruangan ini secepatnya\n")
    time.sleep(3)


