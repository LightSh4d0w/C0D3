    def interaksi_pintu():
        print("""\n\n               
        ┌───────────┐ 
        │┌─────────┐│ 
        ││         ││ 
        ││         ││ 
        ││         ││ 
        │└─────────┘│ 
        │        #@#│ 
        │┌─────────┐│ 
        ││         ││ 
        ││         ││ 
        │└─────────┘│ 
        └───────────┘ """)
        print("\nKamu berdiri di depan pintu keluar. Terlihat gembok kode yang sudah usang.")
        time.sleep(1)
        password = input("Ketik password: ")
        if password == "0606":
            print("\nMemasukan Password")
            time.sleep(2)
            print("""                                            
        ┌────────────────────────────────────────┐ 
        │                                        │ 
        │        ┌──────────────────────┐        │ 
        │        │                     /│        │ 
        │        │                    / │        │ 
        │        │                  //  │        │ 
        │        │                // /│ │        │ 
        │        │===============/  / │ │        │ 
        │        ││---------││--/  /  │ │        │ 
        │        ││ []  ]] [││ [│ /   │ │        │ 
        │        ││---------││--│ │   / │        │ 
        │        ││[[| [[  ]││[[│ │  /  │        │ 
        │        ││---------││--│ │ /   │        │ 
        │        ││[[ [[[  ]││[[│ │/    │        │ 
        │        ││---------││--│    /│ │        │ 
        │        │┴─────────┴┴──│ @ / │ │        │ 
        │        │              │  /  │ │        │ 
        │        │              │  │  │ │        │ 
        │        │              │  │  │ │        │ 
        │        │              │  ──── │        │ 
        │────────└──────────────────────┘────────│ 
        │                                        │ 
        │                                        │ 
        └────────────────────────────────────────┘""")
            print("\nKunci terbuka dengan bunyi klik pelan.\n\nKamu berhasil keluar dari kamar tidur!")
            time.sleep(2)
            print("\n\nSekarang kamu sampai di sebuah perpustakaan")
            time.sleep(2)
            print("\nPerpustakaan ini terlihat kumuh.\n\nBanyak buku buku berserakan dan robek.")
            time.sleep(2)
            print("\nKamu tetap tidak mempedulikan itu dan tetap mencari jalan keluar.")
            return True
        else:
            print("\n\nMemasukan Kode")
            time.sleep(2)
            print("\nGembok tidak bereaksi. Pintu tetap terkunci.")
            time.sleep(2)
            return False

    def interaksi_foto():
        print("""                
        ┌───────────────────────────┐
        │┌─────────────────────────┐│
        ││ *@                    * ││
        ││  @@**                @@@││
