        │ │~~~~~~~~~~~~~~~~~~~~~~~~~~~~│ │ 
        │ ├────────────────────────────┤ │ 
        │ │~~~~~~~~~~~~~~~~~~~~~~~~~~~~│ │ 
        │ └────────────────────────────┘ │ 
        ================================== 
                                    """)
        print("\nSebuah peti tua yang berdebu")
        time.sleep(2)
        print("\nPeti itu terkunci dengan rapat.")
        time.sleep(2)
        print("\nPasti ada cara untuk membukanya")
        time.sleep(2)
        Jawaban=input("\nBuka peti?Buka/Tidak...")
        if Jawaban == "Buka":
            if "Kunci" in Penyimpanan : #Jika pemain memiliki kunci dalam penyimpanan, maka program berjalan
                print("\nMembuka..")
                time.sleep(3)
                print("""                                    
        ┌────────────────────────────────┐ 
        │                                │ 
        │           ______               │ 
        │          |____ /  __           │ 
        │            __//  / _]          │ 
        │           |__ \ / /_           │ 
        │           ___) | '_ \          │ 
        │          |____/| (_) |         │ 
        │                 \___/          │ 
        │                                │ 
        └────────────────────────────────┘""")
                print("\nKamu mendapatkan kertas bertuliskan ANGKA 36\n")
                time.sleep(3)
            else :
                print ("\nMembuka...")
                time.sleep(2)
                print ("\nKamu perlu sesuatu untuk membuka ini.\n")
                time.sleep(3)
        else:
            print("\nPeti itu terkunci dengan rapat.")
            time.sleep(3)
    
