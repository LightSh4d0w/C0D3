def introgame():
    time.sleep(2)
    print ("\n\n\nKamu merasakan rasa sakit yang menjalar di seluruh tubuhmu.\n\nMatamu terbuka perlahan-lahan hanya untuk menyadari.\n")
    time.sleep(3)
    print ("Kamu berada di sebuah ruangan tua. Sebuah Kamar tidur tua\n")
    time.sleep(2)
    print ("Sembari mencerna apa yang terjadi, kamu merasa harus pergi dari ruangan ini secepatnya\n")
    time.sleep(3)

def ending():
    time.sleep(2)
    print("\nAkhirnya kamu dapat melihat suasana selain yang ada di bagnunan ini.")
    time.sleep(2)
    print("\nTernyata suasana diluar tidak seindah saat kamu berada didalam.")
    time.sleep(2)
    print("\nMeskipun sendirian, setidaknya semua yang kamu butuhkan ada didalam bangunan ini.")
    time.sleep(4)
    print("\nHaruskah kamu pergi?")
    Jawaban = input("Pergi/Kembali Masuk\n\n...")
    if Jawaban == 'Pergi':
        print("\nKamu memutuskan untuk pergi dari sini.")
        time.sleep(2)
        print("\nMeninggalkan Mansion besar ini tanpa penghuni.")
        time.sleep(2)
