        ││└──┘ │││ └──┘││ 
        │└─────┘│└─────┘│ 
        └───────────────┘""")
        print("\nKamu mencoba membuka lemari kayu besar.")
        time.sleep(2)
        print("\nEngsel lemari terlalu kuat, sepertinya tidak mungkin dibuka dengan tangan kosong.")
        time.sleep(3)

    def interaksi_bukuharian():
        print("""\n\n                                                     
            __________________   _________________         
        .-/|                  \ /                  |\-.    
        ||||  ****             |             ****  ||||    
        |||| *    *            |            *    * ||||    
        |||| *    *            |  ****      *    * ||||    
        ||||  *****            | *    *     *    * ||||    
        ||||      *    ****    | *    *      ****  ||||    
        |||| *    *   *    *   |  *****            ||||    
        ||||  ****    *    *   |      *            ||||    
        ||||          *    *   | *    *            ||||    
        ||||           ****    |  ****             ||||    
        ||||                   |                   ||||    
        ||||__________________ | __________________||||    
        ||/===================\|/===================\||    
        `--------------------~___~-------------------''    
                                                     """)
        
        print("\nKamu membuka buku harian yang tergeletak di atas meja.")
        time.sleep(2)
        print("\nKamu membuka beberapa halaman, beberapa diantaranya hanya berisi sobekan kertas.")
        time.sleep(2)
        print("\nKamu menemukan halaman bertuliskan 9090.")
        time.sleep(2)
        print("\nKamu tidak bisa membedakan MANA BAGIAN ATAS DAN BAWAH dari buku ini")
        time.sleep(3)

    #Alur Permainan di Ruangan 1
    unlocked = False #Nilai awal variabel unlocked
    while not unlocked: #Loop akan berlanjut hingga variabel unlocked bernilai true
        print_kamartidur()
        Pilihan = input("\nApa yang ingin Anda periksa?...\n")

        if Pilihan == "1":
            unlocked = interaksi_pintu() #Cara merubah nilai variabelnya dengan melakukan fungsi ini
        elif Pilihan == "2":
            interaksi_foto()
        elif Pilihan == "3":
            interaksi_lemari1()
        elif Pilihan == "4":
            interaksi_bukuharian()
        else:
            print("\nPilihan tidak valid. Silakan pilih angka yang tertera.")
            time.sleep(2)
    
