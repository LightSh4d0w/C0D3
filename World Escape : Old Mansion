        time.sleep(2)
        print("\nPasti ada cara untuk membukanya")
        time.sleep(2)
        Jawaban=input("Buka peti?Buka/Tidak...")
        if Jawaban == "Buka":
            if "Kunci" in Penyimpanan :
                print("\nMembuka..")
                time.sleep(3)
                print("""                                    
        ┌────────────────────────────────┐ 
