        print("""
        ================================
                  KAMAR TIDUR
        ================================
        Interaksi:
        1. Pintu
        2. Foto Potrait
        3. Lemari
        4. Buku harian
        """)
        print("Penyimpananmu :",Penyimpanan)

    def interaksi_pintu():
        print("""\n\n               
        ┌───────────┐ 
        │┌─────────┐│ 
        ││         ││ 
        ││         ││ 
        ││         ││ 
        │└─────────┘│ 
        │        #@#│ 
        │┌─────────┐│ 
        ││         ││ 
        ││         ││ 
        │└─────────┘│ 
        └───────────┘ """)
        print("\nKamu berdiri di depan pintu keluar. Terlihat gembok kode yang sudah usang.")
        time.sleep(1)
        password = input("Ketik password angka: ")
        if password == "0606": #Password untuk membuka pintu
            print("\nMemasukan Password...")
            time.sleep(2)
            print("""                                            
        ┌────────────────────────────────────────┐ 
        │                                        │ 
        │        ┌──────────────────────┐        │ 
        │        │                     /│        │ 
        │        │                    / │        │ 
        │        │                  //  │        │ 
        │        │                // /│ │        │ 
        │        │===============/  / │ │        │ 
        │        ││---------││--/  /  │ │        │ 
        │        ││ []  ]] [││ [│ /   │ │        │ 
        │        ││---------││--│ │   / │        │ 
        │        ││[[| [[  ]││[[│ │  /  │        │ 
        │        ││---------││--│ │ /   │        │ 
        │        ││[[ [[[  ]││[[│ │/    │        │ 
        │        ││---------││--│    /│ │        │ 
        │        │┴─────────┴┴──│ @ / │ │        │ 
        │        │              │  /  │ │        │ 
        │        │              │  │  │ │        │ 
