        print("\nPintu itu membutuhkan kombinasi angka untuk terbuka")
        time.sleep(2)
        Jawaban=input("\nBuka Pintu Bawah Tanah?Buka/Tidak...")
        if Jawaban == 'Buka':
            PW = input ("\nMasukan Kombinasi Password: ")
            if PW == '3679':
                print ("\nMemasukan Password..")
                time.sleep(2)
