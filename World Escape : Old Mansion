#Cover dari Game World Escape : Old Mansion
def Main_menu():
    Pilihan_Main_menu = None
    while Pilihan_Main_menu != 'Play' and Pilihan_Main_menu != 'Exit':
        print ("""                                                                                                                                               
    ┌───────────────────────────────────────────────────────────────────────┐      
    │                                                                       │      
    │                                                                       │      
    │    __        __         _     _   _____                               │      
    │    \ \      / /__  _ __| | __| | | ____|___  ___ __ _ _ __   ___      │      
    │     \ \ /\ / / _ \| '__| |/ _` | |  _| / __|/ __/ _` | '_ \ / _ \     │      
    │      \ V  V / (_) | |  | | (_| | | |___\__ \ (_| (_| | |_) |  __/     │      
    │       \_/\_/ \___/|_|  |_|\__,_| |_____|___/\___\__,_| .__/ \___|     │      
    │                                                      |_|              │      
    │                             OLD MANSION                       _   __  │      
    │                                                              / \ /##\ │      
    │                           > Play The Game                    |#|/#__#\│      
    │                                                              |/ │/  \││      
    │           /\              > Exit The Game                    /│#/#  #\│      
    │          /**\                                              __|│_│_┌┐_││      
    │         /****\   /\       > Tentang Kami               ___/    _______│      
    │        /      \ /**\                                  /  /    /       │      
    │       /  /\    /    \                                /  /    /        │      
    │      /  /  \  /      \        /\    /\  /\      /\  /       / /\/\/\  │      
    │     /  /    \/ /\     \      /  \/\/  \/  \  /\/  \/\  /\  /\/ / /  \/│      
    │    /  /      \/  \/\   \    /    \ \  /    \/ /   /  \/  \/  \  /    \│      
    │ __/__/_______/___/__\___\__/______\____/___/____\ ____________________│      
    └───────────────────────────────────────────────────────────────────────┘      
                                                                                   
                                                                                   
    Maukah kamu bermain? Play/Exit""")
        Pilihan_Main_menu=input("\n  ...")
        if Pilihan_Main_menu == 'Play':
            introgame()#Jika pemain memilih play, maka game akan dimulai
        elif Pilihan_Main_menu == 'Exit':
            Jawaban_MainMenu = None
            while Jawaban_MainMenu != 'Tidak':
                print("\nApa Kamu yakin? Ya/Tidak")
                Jawaban_MainMenu=input("...")
                if Jawaban_MainMenu == 'Ya':
                    print("\n\nSampai Jumpa Lagi\n\n")
                    time.sleep(2)
                    sys.exit(1)#Jika pemain memilih ya untuk exit maka program berakhir
                elif Jawaban_MainMenu == 'Tidak':
                    print("\nBagus, ayo main!")
                    time.sleep(2)
                    Main_menu()#Jika pemain memilih tidak, maka akn dibawa lagi ke cover gamenya
                else:
                    print("\nCoba lagi") #Program tidak akan berjalan sampai pemain memasukan input sesuai pilihan
                    time.sleep(1)
        elif Pilihan_Main_menu == 'Tentang Kami':
            print("""                          
        ┌────────────────────────┐
        │                        │
        │      Kelompok 12       │
        │                        │
        │  M. Azka (2309098)     │
        │                        │
        │  Heickel R (2304322)   │
        │                        │
        │  Tradiva (2309425)     │
        │                        │
        │                        │
        └────────────────────────┘""")
            time.sleep(3)
        else :
            print ("\nCoba lagi")#Jika inputnya aneh, akan loop sampai input diantara Play atau Exit


#Urutan Gameplay
Main_menu()
gameplay()
ending()
