        └────────────────────────────────┘""")
            print("\nKamu menemukan sebuah kunci di dalam vas bunga!\n")
            Penyimpanan.append("Kunci")
            time.sleep(3)
        else:
            print("\nTidak ada lagi yang bisa ditemukan di sini.\n")
            time.sleep(3)

    def interaksi_poster():
        print ("""
        ┌────────────────────┐ 
        │ ┌────────────────┐ │ 
        │ │ ### ## ### ### │ │ 
        │ │ o o o ┌──────┐ │ │ 
        │ │ oooooo│      │ │ │ 
        │ │  oo oo│      │ │ │ 
        │ │ oooo  │      │ │ │ 
        │ │ oo ooo└──────┘ │ │ 
        │ │  ooo  oooooo o │ │ 
        │ │ oo ooo     o o │ │ 
        │ │  ooo oooo oooo │ │ 
        │ │ ┌─────┐   oooo │ │ 
        │ │ └─────┘ oooo o │ │ 
        │ └────────────────┘ │ 
        └────────────────────┘ """)
        print("\nIni hanyalah poster biasa.")
        time.sleep(2)
        print("\nPoster ini berjudul SEMUA DIMULAI DARI HAL KECIL.")
        time.sleep(2)
        print("\nTidak ada yang spesial.\n")
        time.sleep(3)


    def interaksi_pintubawahtanah():
        print("""        
              _______________      
             /       =       \     
            / ────── = ────── \    
           / /#####│ = │#####\ \   
          / /######│ = │######\ \  
         / /──────── = ────────\ \ 
        /____________=____________\
                             """)
        print("\nKamu melihat ada sebuah pintu bawah tanah")
        time.sleep(2)
        print("\nPintu itu membutuhkan kombinasi angka untuk terbuka")
        time.sleep(2)
        Jawaban=input("\nBuka Pintu Bawah Tanah?Buka/Tidak...")
        if Jawaban == 'Buka':
            PW = input ("\nMasukan Kombinasi Password Angka: ")
            if PW == '3679': #Kombinasi password angka untuk membuka pintu
                print ("\nMemasukan Password..")
                time.sleep(2)
                print("""                                                                      
        ┌──────────────────────────────────────────────────────────────────┐ 
        │            \                                        /            │ 
        │             \──────────────────────────────────────/             │ 
        │              \    ┌───┐                  ┌───┐    /              │ 
        │               \===│   │ =================│   │===/               │ 
        │                // │   │                  │   │ \\                │ 
        │               //  │   │#────────────────#│   │  \\               │ 
        │              //   │   │#────────────────#│   │   \\              │ 
        │             //    │   │                  │   │    \\             │ 
        │            //     │   │#──────────────── │   │     \\            │ 
        │\          //      │   │#────────────────#│   │      \\          /│ 
        │ \        //       │   │                  │   │       \\        / │ 
        │  \      //        │   │#────────────────#│   │        \\      /  │ 
        │   \    //         │   │#────────────────#│   │         \\    /   │ 
        │    \  //          │   │                  │   │          \\  /    │ 
        │     \//           │   │#────────────────#│   │           \\/     │ 
        │     ========================================================     │ 
        │                                                                  │ 
        └──────────────────────────────────────────────────────────────────┘ """)
                print ("\nPintu bawah tanahnya terbuka!")
                time.sleep(2)
                print("\nKamu melihat sebuah tangga didalam pintu masuk itu.")
                time.sleep(2)
                print("\nKamu menuruni tangga dan masuk kedalam.")
                time.sleep(2)
                print("\nKamu menemukan sebuah ruang bawah tanah yang penuh dengan debu.")
                time.sleep(3)
                return True #Jika benar, Maka variabel unlocked2 akan bernilai true. loop ruangan 2 berakhir
            else :
                print ("\nMemasukan Password..")
                time.sleep(2)
                print ("\nPintu masih belum terbuka")
                time.sleep(3)
                return False
        else :
            print("\nAku perlu kodenya terlebih dahulu")
            time.sleep(3)
            

    #Alur Permainan di Ruangan 2
    unlocked2 = False #Nilai awal variabel unlocked2
    while not unlocked2: #Loop akan berjalan sampai variabel unlocked bernilai True
        print_perpustakaan()
        Pilihan = input("\nApa yang ingin Kamu periksa?...\n")
        if Pilihan == '1':
            time.sleep(2)
            interaksi_pintuperpus()
        elif Pilihan == '2':
            time.sleep(2)
            interaksi_rakbuku()
        elif Pilihan == '3':
            time.sleep(2)
            interakasi_peti()
        elif Pilihan == '4':
            time.sleep(2)
            interaksi_poster()
        elif Pilihan == '5':
            time.sleep(2)
            interaksi_vasbunga()
        elif Pilihan == '6':
            time.sleep(2)
            unlocked2 = interaksi_pintubawahtanah() #Cara merubah nilai variabel dengan menjalani fungsi ini
        else:
            print("\nPilihan tidak valid. Silakan pilih angka yang tertera.")
            time.sleep(2)
    
