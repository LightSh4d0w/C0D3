#Sum two integers
print("\n\n\nSUM TWO INTEGERS 3 TIMES")
print("Please write two integers in the empty space below!")
print("(Contoh Bilangan Bulat :...,-100,-3,-2,-1,0,1,2,3,100...)")
for i in range(3):
    BilBul1 = int(input("Please input the first number: "))
    BilBul2 = int(input("Please input the second number: "))
    sum=BilBul1+BilBul2
    print("\nCalculating...\n")
    time.sleep(3)
    print("The sum is",sum,"\n\n")

time.sleep(3)
