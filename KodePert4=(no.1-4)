#multiplication of four integer values
print("\nMULTIPLICATION OF FOUR INTEGER VALUES")
A=int(input("\nWrite Value of Variabel A : "))
B=int(input("Write Value of Variabel B : "))
C=int(input("Write Value of Variabel C : "))
D=int(input("Write Value of Variabel D : "))

Result=A*B*C*D
print("\nCalculating...")
time.sleep(3)

print("\nThe result of the multiplication between",A,",",B,",",C,",and",D,"is",Result)

# Calculating the area and the perimeter of a square
print("\n\n\nCALCULATING THE AREA AND THE PERIMETER OF A SQUARE")
Side=int(input("\nWrite Value of the side : "))

print("\nCalculating the area and the perimeter of a square with",Side,"cm....\n")
ResultOfArea=Side*Side
ResultOfPerimeter=4*Side
time.sleep(3)
print("\nThe square with",Side,"cm side has total area of",ResultOfArea,"cmÂ² and total perimeter of",ResultOfPerimeter,"cm")

